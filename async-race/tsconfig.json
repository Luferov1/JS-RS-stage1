{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "rootDir": "src",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": false,
    "sourceMap": true,
    "outDir": "dist",
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "custom.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}
